{
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": ["standard", "prettier", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "off"
  }
}
